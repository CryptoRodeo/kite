PORT=8080
HOST=0.0.0.0
PROJECT_ENV=development
TZ=UTC

# Database Configuration
# For local development and migrations
# Used in container
DB_HOST=db
DB_PORT=5432
DB_USER=kite
DB_PASSWORD=postgres
DB_NAME=issuesdb
DB_SSL_MODE=disable

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=text

# Security Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=*
RATE_LIMIT_RPS=1000

# Feature Flags
FEATURE_METRICS=true
FEATURE_NAMESPACE_CHECKING=false
FEATURE_WEBHOOKS=true

# Timeouts
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s
SHUTDOWN_TIMEOUT=10s
